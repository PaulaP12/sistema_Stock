  <tr v-for=\"(article, index) in articles\" :key=\"index\">\n            <td>{{ article.id }}</td>\n            <td>{{ article.nameArticle }}</td>\n            <td>$ {{ article.priceArticle }}</td>\n            <td>{{ article.stockMinArticle }}</td>\n            <td>{{ article.stockMaxArticle }}</td>\n            <td>{{ article.dateExpirationArt }}</td>\n            <td>{{ article.category_id }}</td>\n            <td><font-awesome-icon class='icon' style=\"color:red;\" :icon=\"['fas', 'trash']\" /></td>\n            <td><font-awesome-icon class='icon' style=\"color:blue;\" :icon=\"['fas', 'edit']\" /></td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n\n\n  </div>\n</template>\n\n<script>\nimport ApiRest from \"@/mixins/ApiRest.vue\";\nimport ABMArticles from \"../components/ABMArticles.vue\";\n\nexport default {\n  mixins: [ApiRest],\n  components:{\n    ABMArticles,\n  },\n  data() {\n    return {\n      articles: [],\n      OpenModal: false,\n      param:'articles',\n    };\n  },\n  created() {\n    this.getInfo(this.param).then((res) => {\n      this.articles = res;\n    });\n  },\n};\n</script>\n\n<style scoped>\n  .title{\n    text-align: center;\n  }\n  .btn {\n    background-color: #c0b05c;\n  }\n  .btn:hover {\n    background-color: #776d3a;\n  }\n  .container{\n      text-align: center;\n      margin-top:60px;\n  }\n  .icon{\n      cursor: pointer;\n  }\n</style>\n"]}]}